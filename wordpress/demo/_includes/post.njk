---
layout: base.njk
---
<article>
  <header>
    <h1>{{ title }}</h1>
    <h2>{{ modified_by_hook }}</h2>

    {% if author %}
    By: <a href="{{ author.url }}">{{ author.name }}</a>
    {% endif %}

    {% if categories.length %}
      Categories:
      {% for category in categories %}
      <a href="{{ category.url }}">{{ category.name }}</a>
      {% endfor %}
    {% endif %}
  
    {% if tags.length %}
      Tags:
      {% for tag in tags %}
      <a href="{{ tag.url }}">{{ tag.name }}</a>
      {% endfor %}
    {% endif %}
  </header>

  {{ content | safe }}
</article>