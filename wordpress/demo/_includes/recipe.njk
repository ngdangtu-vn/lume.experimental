---
layout: base.njk
---
<article>
  <header>
    <h1>{{ title }}</h1>

    {% if author %}
    By: <a href="{{ author.url }}">{{ author.name }}</a>
    {% endif %}

    {% if ingredients.length %}
      Ingredients:
      {% for ingredient in ingredients %}
        <a href="{{ ingredient.url }}">{{ ingredient.name }}</a>
      {% endfor %}
    {% endif %}
  </header>

  {{ content | safe }}
</article>